<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          タスク
          <p><%= task.content %></p>
          ステータス
          <p><%= task.status %></p>
        </div>
        <div>
          <% if current_user == task.user %>
           <%= link_to 'タスクを削除', task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger btn-sm' %>
           <%= link_to 'このタスクを編集する', edit_task_path(task), class: 'btn btn-light' %>
           <%= link_to 'タスク詳細ページ', task, class: 'btn btn-light' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>